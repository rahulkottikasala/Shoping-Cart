<section>
 <div class="container mt-5 p-2">
     <div class="row">
         {{#each orderList}}
         <div class="col-md-4 col-lg-3 p-3">
             <div class="card" style="width: auto; height: 20rem;">
                 <img src="/images/product-images/{{product._id}}.jpg" class="card-img-top p-2 ps-5 mt-3" style="width: 9rem; height: 10rem;" alt="...">
                 <div class="card-body">
                     <h5 class="card-title">{{product.Name}}</h5><br>
                     <p>Quantity :{{quantity}}</p>
                 </div>
             </div>
         </div>
         {{/each}}
     </div>
 </div>
</section>