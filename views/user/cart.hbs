<section>

    <div class="container mt-3">
        <table class="col-md-12 table">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}

                <tr>

                    <td><img src="/images/product-images/{{product._id}}.jpg" style="width: 50px; height: 50px;" alt="">
                    </td>
                    <td class="">{{product.Name}}</td>
                    <td>{{product.Price}}</td>
                    <td>
                        <button onclick="changeQuantity('{{_id}}','{{product._id}}','{{../user._id}}',-1)" id="hide-button"
                            class="cart-items-count btn btn-dark btn mx-2">-</button>
                        <span id="{{product._id}}"> {{quantity}}</span>
                        <button onclick="changeQuantity('{{_id}}','{{product._id}}','{{../user._id}}',1)"
                            class="cart-items-count  btn btn-dark btn mx-2">+</button>
                    </td>
                    
                    <td>
                        <button class="btn btn-danger"
                            onclick="removeCartProduct('{{_id}}','{{product._id}}')">Remove</button>
                    </td>
                </tr>
                {{/each}}


            </tbody>
        </table>
        <hr>
        <h3 class="float-end text-danger mt-5 me-5" ><b> Total = Rs. <span id="total">{{total}}</span> /-</b></h3><br>
        <a href="/place-order" class=" btn btn-success btn-lg"
            style="margin-top: 2rem;width: 15rem;margin-left: 64rem;" >Place Order</a>
    </div>
    
</section>