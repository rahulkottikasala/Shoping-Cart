<section>

    
    <div class="container mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                     <th scope="col"></th>
                    
                </tr>
            </thead>
            <tbody>
                {{#each products}}

                <tr>
                    {{#each product}}
                    <td><img src="/images/product-images/{{_id}}.jpg" style="width: 50px; height: 50px;" alt=""></td>
                    <td class="">{{Name}}</td>
                    {{/each}}
                    <td>
                        <button class="cart-items-count btn btn-dark btn mx-2">-</button>{{quantity}} <button class="cart-items-count  btn btn-dark btn mx-2">+</button>
                    </td>
                    <td>{{Price}}</td>
                    <td><a class="btn btn-danger">Remove</a></td>
                </tr>
                 {{/each}}
                

            </tbody>
        </table>
    </div>
</section>