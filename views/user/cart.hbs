<section>

    
    <div class="container mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
               
                <tr>
                    <th scope="row">1</th>
                    <td>{{Name}}</td>
                    <td>{{Category}}</td>
                    <td>{{Description}}</td>
                    <td>{{Price}}</td>
