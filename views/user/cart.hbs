<section>


    <div class="container mt-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col"></th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}

                <tr>

                    <td><img src="/images/product-images/{{product._id}}.jpg" style="width: 50px; height: 50px;" alt=""></td>
                    <td class="">{{product.Name}}</td>

                    <td>
                        <button onclick="changeQuantity('{{_id}}','{{product._id}}',-1)" id="hide-button" class="cart-items-count btn btn-dark btn mx-2">-</button>
                       <span id="{{product._id}}"> {{quantity}}</span>
                        <button onclick="changeQuantity('{{_id}}','{{product._id}}',1)"
                            class="cart-items-count  btn btn-dark btn mx-2">+</button>
                    </td>
                    <td>{{Price}}</td>
                    <td>
                        <button class="btn btn-danger ">Remove</button>
                    </td>
                </tr>
                {{/each}}


            </tbody>
        </table>
    </div>
</section>


