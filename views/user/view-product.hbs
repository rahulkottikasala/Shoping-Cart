
 <section>
 <div class="container mt-5 p-2"> 
     <div class="row">
         {{#each products}}
         <div class="col-md-4 col-lg-3 p-3">
             <div class="card" style="width: auto; height: 24rem;">
                 <img src="/images/product-images/{{_id}}.jpg" class="card-img-top p-2 ps-5" style="width: 9rem; height: 10rem;" alt="...">
                 <div class="card-body">
                     <h5 class="card-title">{{this.Name}}</h5>
                     <p>{{this.Category}}</p>
                     <p class="card-text">{{this.Description}}</p>
                     <p>Price : {{Price}}</p>
                     <button class="btn btn-primary" onclick="addToCart('{{_id}}')">Add To Cart</button>
                 </div>
             </div>
         </div>
         {{/each}}
     </div>
 </div>
</section>