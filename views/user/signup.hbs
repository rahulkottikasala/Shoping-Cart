<div class="container signup-page">
    <div class="row col-md-6 ">
        <h4 class="pt-4">Create A Account</h4>
        <form action="/signup" method="POST" class="pt-4">
            <div class="mb-3">
                <label for="exampleInputFirstname" class="form-label">First Name</label>
                <input type="text" class="form-control" name="fName">
            </div>
            <div class="mb-3">
                <label for="exampleInputLastname" class="form-label">Las tName</label>
                <input type="text" class="form-control" name="lName">
            </div>
            {{#if Error}}
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" name="email" aria-describedby="emailHelp" required>
                <div id="emailHelp" class="form-text text-danger">{{Error}}</div>
            </div>
            {{else}}
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" name="email" aria-describedby="emailHelp" required>
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            {{/if}}
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="mb-3 form-check">
                <input type="checkbox" id="toggle-password">
                <label class="form-check-label">Show Password</label>
                <a class="float-end" href="/login">Already have a account ?</a>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>