<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Produduct</h2>
                 {{#each Product}}
                <form action="/admin/edit-product/{{_id}}" enctype="multipart/form-data" method="POST">
               

                    <label for="">Name</label>
                    <input type="text" name="Name" value="{{Name}}" class="form-controll mt-3 w-100"><br>

                    <label for="">Category</label>
                    <input type="text" name="Category" value="{{Category}}" class="form-controll mt-3 w-100"><br>

                    <label for="">Description</label>
                    <input type="text" name="Description" value="{{Description}}" class="form-controll mt-3 w-100 " ></input><br>

                    <label for="">Price</label>
                    <input type="number" name="Price" value="{{Price}}" class="form-controll mt-3 w-100"><br>
                    <br>

                    <label for="">Current Image</label><br>
                    <img src="/images/product-images/{{_id}}.jpg" id="imgView" style="height:auto; width: 50px;" class="p-1" alt=""><br><br>
                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-controll mt-3 w-100" onchange='imageChange(event)'> 
                    <br>
                    {{/each}}

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
   function imageChange(event)  {
        console.log(event)
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>